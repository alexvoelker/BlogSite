<%- include("partials/header.ejs") %>

    <form action="/post/update/<%= locals.post.postID %>" method="post">
        <label>
            Name:
        </label>
        <input name="username" type="text" class="form-input" placeholder="username"
            value="<%= locals.post.username %>" />
        <label>
            Title:
        </label>
        <input name="title" type="text" class="form-input" placeholder="title" value="<%= locals.post.title %>" />
        <label>
            Blog Post:
        </label>
        <textarea name="content" type="text" class="form-entry-area"
            placeholder="Post body..."><%=  locals.post.content %></textarea>
        <label>
            Footnotes:
        </label>
        <textarea name="footnotes" type="text" class="form-entry-area"
            placeholder="Additional notes"><%=  locals.post.footnotes %></textarea>
        <button type="submit">UPDATE POST</button>
    </form>

    <%- include("partials/footer.ejs") %>