<%- include("partials/header.ejs") %>
<style>
    textarea {
        field-sizing: content;
    }
</style>
<div class="container">
    <div class="card text-center">
        <div class="card-header">
            <h4>
                <strong>
                    <% if (locals.formType != null && locals.formType === "update") { %>
                        Update Post
                    <% } else { %>
                        Create A Post    
                    <% } %>
                </strong>
            </h4>
       </div>
        <div class="card-body">

        <% if (locals.formType != null && locals.formType === "update") { %>
            <form action="/post/update/<%= locals.post.postID %>" method="post">
        <% } else { %>
            <form action="/post/create" method="post">
        <% } %>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Name</span>
                    <input type="text" name="username" class="form-control" placeholder="Username" aria-label="Username"
                        aria-describedby="addon-wrapping" 
                        <% if (locals.post) { %>
                            value="<%= locals.post.username %>"
                        <% } %>
                        >
                </div>
                <br>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Title</span>
                    <input type="text" name="title" class="form-control" placeholder="Title" aria-label="Post Title"
                        aria-describedby="addon-wrapping"
                        <% if (locals.post) { %>
                            value="<%= locals.post.title %>"
                        <% } %>
                        >
                </div>
                <br>
                <div class="input-group">
                    <span class="input-group-text">Post Content</span>
                    <textarea class="form-control" name="content" placeholder="Post content here..." aria-label="Post Content"><% if (locals.post) { %><%=  locals.post.content%><% } %></textarea>
                </div>
                <br>
                <div class="input-group">
                    <span class="input-group-text">Footnotes</span>
                    <textarea class="form-control" name="footnotes" placeholder="Post footnotes here..." aria-label="Post Content"><% if (locals.post) { %><%=  locals.post.footnotes%><% } %></textarea>
                </div>
            </div>
            <div class="card-footer text-body-secondary">
                <button type="submit" class="btn btn-outline-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle"
                        viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path
                            d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                    </svg>
                    <% if (locals.formType != null && locals.formType === "update") { %>
                            UPDATE POST
                    <% } else { %>
                            CREATE POST
                    <% } %>
                </button>
                <a href="/">
                    <button type="button" class="btn btn-outline-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-octagon"
                            viewBox="0 0 16 16">
                            <path
                                d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1z">
                            </path>
                            <path
                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708">
                            </path>
                        </svg>
                        Cancel 
                    </button>
                </a>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>